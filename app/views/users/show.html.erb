<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <% if current_user?(@user) %>
    <br>
    <p style="padding-left: 60px;">API Access Token: <%#= ApiKey.find_by_user_id(current_user.id).access_token %></p>
  <% else %>
    <%= link_to "send message", new_pm_path(:recipient_id => @user.id) %>
  <% end %>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Listings (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
<br>
<br>
<br>
<br>
<p>Recently Visited Pages</p>
 <div><ol>
    <% @history.each do |r| %>
      <li><a href = <%= r %>><%= r %></a></li>
    <%end %></ol>
</div>
