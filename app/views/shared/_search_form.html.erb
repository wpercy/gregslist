<%= form_tag search_path, class: "form-search form-inline", method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search...", :size => 40, maxLength: 150, class: "search-query", style: "padding-left: 25px;"%>
  <%= submit_tag "Search", :name => nil, class: "btn-primary search-btn"%>
<% end %>
