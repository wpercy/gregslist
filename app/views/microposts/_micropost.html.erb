<li>
  <span class="content"><%= link_to micropost.post_title, micropost %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% else %>
    <% if signed_in? && !current_user.location.nil? && !micropost.user.location.nil? %>
      <span id="distance"><%= get_distance(@user.location, micropost.user.location) %></span>
    <% end %>
  <% end %>
</li>
